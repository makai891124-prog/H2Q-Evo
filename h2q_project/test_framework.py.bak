import unittest

class ExtendedTestCase(unittest.TestCase):
    def assertEqual(self, a, b, msg=None):
        try:
            super().assertEqual(a, b, msg)
        except AssertionError as e:
            standard_msg = str(e)
            detailed_msg = f"\nDetailed Error Report:\n  - Expected: {b}\n  - Actual:   {a}\n"
            if msg:
                detailed_msg = f"{msg}\n{detailed_msg}"
            raise AssertionError(f"{standard_msg}{detailed_msg}")

    def assertTrue(self, x, msg=None):
        try:
            super().assertTrue(x, msg)
        except AssertionError as e:
            standard_msg = str(e)
            detailed_msg = f"\nDetailed Error Report:\n  - Expected: True\n  - Actual:   {x}\n"
            if msg:
